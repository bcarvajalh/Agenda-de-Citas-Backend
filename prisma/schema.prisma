// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

enum Role {
  MEDICO
  PACIENTE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(PACIENTE) // 
  
  // Relaciones para las citas 
  appointmentsAsDoctor  Appointment[] @relation("DoctorAppointments")
  appointmentsAsPatient Appointment[] @relation("PatientAppointments")

  createdAt DateTime @default(now())
}

model Appointment {
  id        String   @id @default(uuid())
  dateTime  DateTime // Fecha y hora de la cita [cite: 8]
  
  // Relación con el Paciente 
  patientId String
  patient   User     @relation("PatientAppointments", fields: [patientId], references: [id])

  // Relación con el Médico 
  doctorId  String
  doctor    User     @relation("DoctorAppointments", fields: [doctorId], references: [id])

  status    String   @default("PENDIENTE") // CRUD: PENDIENTE, COMPLETADA, CANCELADA 
  createdAt DateTime @default(now())

  // Validación: Un médico no puede tener dos citas en el mismo instante [cite: 10]
  @@unique([doctorId, dateTime]) 
}